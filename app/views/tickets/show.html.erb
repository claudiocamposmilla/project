<div class="form-container m-5">
  <div>
    <% if can? :modify_profile, @user %>
      <div class="field">
        <div class="d-grid gap-1 col-3 ">
        <%= link_to "Edit this ticket", edit_ticket_path(@ticket) , class:"btn btn-outline-secondary"%></div>
        <br>
        </div>
        <div class="d-grid gap-1 col-3 ">
          <%= link_to "Destroy this ticket", @ticket, method: :delete, class:"btn btn-outline-danger" %>
