      </div>
    <% end %>
    <br>
    <% if current_user.normal? || current_user.executive? %>
    <div class="d-grid gap-1 col-3 ">
      <%= link_to "Volver a Mis Tickets", my_comments_user_path(@user) , class:"btn btn-outline-secondary"%>
